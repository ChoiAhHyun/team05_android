<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="45.6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="115.2dp"
                    android:background="@color/color_111861"
                    android:scaleType="center"/>

                <!--<RelativeLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerInParent="true"-->
                    <!--android:background="@drawable/round_upload_background">-->

                    <Button
                        android:id="@+id/btn_upload"
                        android:layout_width="171.2dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:text="+     커버 사진 업로드"
                        android:textColor="@color/white"
                        android:textSize="15.2sp"
                        android:lineSpacingExtra="1.8sp"
                        android:gravity="center"
                        android:background="@drawable/round_upload_background"
                        />

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="+"-->
                        <!--android:textColor="@color/white"-->
                        <!--android:textSize="15.2sp"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:paddingLeft="19.2dp"/>-->
                </RelativeLayout>
            <!--</RelativeLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="28dp"
                android:paddingRight="28dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.2sp"
                        android:textColor="@color/color_06095e"
                        android:text="모임이름"
                        />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17.2sp"
                        android:textColor="@color/color_707070"
                        android:textColorHint="@color/color_707070"
                        android:hint="모임 이름을 입력해주세요"
                        android:background="@color/white"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_marginTop="12dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:layout_marginTop="12.4dp"
                        android:background="@color/color_707070"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="17.6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.2sp"
                        android:textColor="@color/color_06095e"
                        android:text="카테고리"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical">
                        
                        <TextView
                            android:id="@+id/tv_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17.2sp"
                            android:textColor="@color/color_707070"
                            android:text="카테고리 선택하러 가기"/>
                        
                        <ImageView
                            android:layout_width="6dp"
                            android:layout_height="9.6dp"
                            android:src="@drawable/icon_right_arrow"
                            android:layout_marginLeft="14dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:layout_marginTop="8.4dp"
                        android:background="@color/color_707070"/>
                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="vertical"-->
                    <!--android:layout_marginTop="28.8dp">-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textSize="15.2sp"-->
                        <!--android:textColor="@color/color_06095e"-->
                        <!--android:text="날짜"-->
                        <!--/>-->

                    <!--<EditText-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textSize="17.2sp"-->
                        <!--android:textColor="@color/color_707070"-->
                        <!--android:textColorHint="@color/color_707070"-->
                        <!--android:hint=""-->
                        <!--android:background="@color/white"-->
                        <!--android:singleLine="true"-->
                        <!--android:imeOptions="actionNext"-->
                        <!--android:layout_marginTop="12dp"/>-->
                <!--</LinearLayout>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28.8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.2sp"
                        android:textColor="@color/color_06095e"
                        android:text="날짜"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15.2sp"
                            android:textColor="@color/color_06095e"
                            android:text="5월 12일"/>

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="8dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/icon_down_arrow"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21.2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.2sp"
                        android:textColor="@color/color_06095e"
                        android:text="시간"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15.2sp"
                            android:textColor="@color/color_06095e"
                            android:text="12 : 34 PM"/>

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="8dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/icon_down_arrow"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.2sp"
                        android:textColor="@color/color_06095e"
                        android:text="만남 장소"
                        />

                    <TextView
                        android:id="@+id/tv_place_picker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17.2sp"
                        android:textColor="@color/color_707070"
                        android:text="만남장소 검색"
                        android:layout_marginTop="12dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:layout_marginTop="8.4dp"
                        android:background="@color/color_707070"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="23.6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.2sp"
                        android:textColor="@color/color_06095e"
                        android:text="참여 인원"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="49.2dp"
                        android:background="@drawable/add_border"
                        android:layout_marginTop="9.2dp">
                        
                        <ImageView
                            android:id="@+id/btn_minus"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/minus_btn"
                            android:layout_marginLeft="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:id="@+id/tv_peopleNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textSize="17.2sp"
                            android:textColor="@color/color_707070"
                            android:layout_centerInParent="true"/>

                        <ImageView
                            android:id="@+id/btn_plus"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/plus_btn"
                            android:layout_marginRight="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21.2dp">

                    <TextView
                        android:id="@+id/textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="9.2dp"
                        android:textSize="15.2sp"
                        android:textColor="@color/color_06095e"
                        android:text="모임 설명"
                        />

                    <TextView
                        android:id="@+id/warning_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100 자 이내로 입력해주세요"
                        android:textSize="14sp"
                        android:textColor="@color/color_ff2807"
                        android:visibility="invisible"
                        android:layout_alignBottom="@+id/tv_textNumber"
                        android:layout_toLeftOf="@+id/tv_textNumber"
                        android:layout_marginRight="28dp"
                        />

                    <EditText
                        android:id="@+id/et_description"
                        android:layout_below="@+id/textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15.2sp"
                        android:textColor="@color/color_707070"
                        android:textColorHint="@color/color_707070"
                        android:hint="만나서 어떤 활동을 하실 건가요?"
                        android:gravity="start"
                        android:minHeight="91.2dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="9.2dp"
                        android:paddingEnd="9.2dp"
                        android:background="@drawable/add_border"/>

                    <TextView
                        android:id="@+id/tv_textNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textview"
                        android:text="0 / 100"
                        android:textSize="11.2sp"
                        android:textColor="@color/color_707070"
                        android:layout_alignParentEnd="true"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp">

                    <TextView
                        android:id="@+id/textview2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.2sp"
                        android:textColor="@color/color_06095e"
                        android:text="키워드"
                        />

                    <TextView
                        android:id="@+id/warning_keyword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100 자 이내로 입력해주세요"
                        android:textSize="14sp"
                        android:textColor="@color/color_ff2807"
                        android:visibility="invisible"
                        android:layout_alignBottom="@+id/textview2"
                        android:layout_toRightOf="@+id/textview2"
                        android:layout_marginLeft="20dp"
                        />

                    <EditText
                        android:id="@+id/et_keyword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15.2sp"
                        android:textColor="@color/color_707070"
                        android:textColorHint="@color/color_707070"
                        android:hint="EX. #농구 #오버워치 #고양이"
                        android:background="@color/white"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:layout_marginTop="15.2dp"
                        android:layout_below="@+id/textview2"/>

                    <View
                        android:id="@+id/v_keyword"
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:layout_marginTop="8.4dp"
                        android:background="@color/color_707070"
                        android:layout_below="@+id/et_keyword"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_make"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_717486"
        android:text="모임 만들기"
        android:textColor="@color/white"
        android:textSize="18sp"
        />

</LinearLayout>