<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_board_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="13dp"
        android:layout_width="37dp"
        android:layout_height="37dp" />

    <TextView
        android:id="@+id/txt_board_content"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="@id/img_board_profile"
        app:layout_constraintTop_toTopOf="@id/img_board_profile"
        android:textSize="13dp"
        android:textColor="#010000"
        android:text="저 가능할 것 같습니다!"
        />

    <TextView
        android:id="@+id/txt_board_name"
        app:layout_constraintTop_toBottomOf="@id/txt_board_content"
        app:layout_constraintLeft_toLeftOf="@id/txt_board_content"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="#717486"
        android:text="서유빈"
        />

    <TextView
        android:id="@+id/txt_board_."
        android:layout_marginLeft="3dp"
        app:layout_constraintLeft_toRightOf="@id/txt_board_name"
        app:layout_constraintTop_toTopOf="@id/txt_board_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="#717486"
        android:text="·"
        />

    <TextView
        android:id="@+id/txt_board_date"
        android:layout_marginLeft="3dp"
        app:layout_constraintTop_toTopOf="@id/txt_board_name"
        app:layout_constraintLeft_toRightOf="@id/txt_board_."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="#717486"
        android:text="2시간전"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
