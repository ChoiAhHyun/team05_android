<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/img_user_group_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/user_group_img_size"
        android:layout_height="@dimen/user_group_img_size"
        app:layout_constraintRight_toRightOf="@id/img_user_group_3"
        android:layout_marginRight="@dimen/user_group_img_margin"
        />

    <ImageView
        android:id="@+id/img_user_group_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/user_group_img_size"
        android:layout_height="@dimen/user_group_img_size"
        app:layout_constraintRight_toRightOf="@id/img_user_group_2"
        android:layout_marginRight="@dimen/user_group_img_margin" />



    <ImageView
        android:id="@+id/img_user_group_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/user_group_img_size"
        android:layout_height="@dimen/user_group_img_size"
        app:layout_constraintRight_toRightOf="@id/img_user_group_1"
        android:layout_marginRight="@dimen/user_group_img_margin" />

    <ImageView
        android:id="@+id/img_user_group_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/user_group_img_size"
        android:layout_marginRight="6dp"
        android:layout_height="@dimen/user_group_img_size"
        app:layout_constraintRight_toLeftOf="@id/txt_user_group_count" />
    
    <TextView
        android:id="@+id/txt_user_group_count"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="9.2dp"
        android:textSize="11.2sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#656565"
        android:lineSpacingExtra="0.5sp"
        android:text="+5"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
