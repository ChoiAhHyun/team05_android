<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_home_card_clock"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/main_clock_img"
        app:layout_constraintTop_toTopOf="@id/txt_home_card_date"
        app:layout_constraintBottom_toBottomOf="@id/txt_home_card_date"
        android:layout_width="@dimen/home_card_icon_size"
        android:layout_height="@dimen/home_card_icon_size" />

    <TextView
        android:id="@+id/txt_home_card_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_home_card_clock"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/home_card_body_text_size"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#656565"
        android:lineSpacingExtra="0.5sp"
        android:text="2019.06.23 "
        />

    <TextView
        android:id="@+id/txt_home_card_time"
        app:layout_constraintLeft_toRightOf="@id/txt_home_card_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txt_home_card_date"
        app:layout_constraintBottom_toBottomOf="@id/txt_home_card_date"
        android:layout_marginLeft="4.8dp"
        android:textSize="@dimen/home_card_body_text_size"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#656565"
        android:lineSpacingExtra="0.5sp"
        android:text="6:30 pm"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
